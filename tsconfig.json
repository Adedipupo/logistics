{
  "compilerOptions": {
    "target": "ES6",                          // Target ES6
    "module": "commonjs",                     // Use CommonJS module system
    "rootDir": "./src",                       // Root directory of TypeScript files
    "outDir": "./dist",                       // Output directory for compiled JS files
    "strict": true,                           // Enable strict type-checking options
    "esModuleInterop": true,                  // Enables compatibility between CommonJS and ES modules
    "skipLibCheck": true,                     // Skip type checking for all declaration files (*.d.ts)
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "sourceMap": true,                        // Generate source maps for debugging
    "resolveJsonModule": true,                // Allow importing .json files
    "moduleResolution": "node"                // Use Node module resolution strategy
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
